<Window x:Class="listboxContent.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:listboxContent"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <ItemsPanelTemplate x:Key="ListBoxItemsPanel1">
            <WrapPanel/>
        </ItemsPanelTemplate>
    </Window.Resources>
    <Grid>
        <ListBox ItemsPanel="{DynamicResource ListBoxItemsPanel1}" Margin="10,10,351,0" ScrollViewer.VerticalScrollBarVisibility="Visible">
            <Rectangle Height="78" Stroke="Black" Width="88" Fill="#FFF11616"/>
            <Rectangle Height="78" Stroke="Black" Width="88" Fill="#FF1670F1"/>
            <Rectangle Height="78" Stroke="Black" Width="88" Fill="#FF16F170"/>
        </ListBox>

    </Grid>
</Window>
